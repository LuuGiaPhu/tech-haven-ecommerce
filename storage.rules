rules_version = '2';

// Allow uploads for product images and user avatars
service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow uploads to products folder
    match /products/{imageId} {
      allow write: if resource.size < 10 * 1024 * 1024 // Limit to 10MB
        && resource.contentType.matches('image/.*'); // Only images
    }
    
    // Allow authenticated users to upload avatar images
    match /avatars/{allFiles=**} {
      allow write: if request.auth != null 
        && resource.size < 5 * 1024 * 1024 // Limit to 5MB
        && resource.contentType.matches('image/.*'); // Only images
    }
    
    // For development - allow all operations (remove in production)
    match /{allPaths=**} {
      allow read, write: if true;
    }
  }
}
