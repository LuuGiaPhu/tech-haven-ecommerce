                const data = await response.json();
                
                if (data.success) {
                    // Update local user data
                    window.currentUser = { ...window.currentUser, ...data.user };
                    localStorage.setItem('techHavenUser', JSON.stringify(window.currentUser));
                    
                    // Update UI
