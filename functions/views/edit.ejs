        // Filter users based on search and filters
        async function filterUsers() {
            const searchText = document.getElementById('userSearch').value.toLowerCase().trim();
            const membershipLevel = document.getElementById('membershipFilter').value;
            const role = document.getElementById('roleFilter').value;
            
            const loadingSpinner = document.getElementById('loadingUsersSpinner');
            const usersList = document.getElementById('usersList');
            const noUsers = document.getElementById('noUsers');
            const usersCount = document.getElementById('usersCount');
            
            loadingSpinner.style.display = 'block';
            usersList.innerHTML = '';
            noUsers.style.display = 'none';
            
            try {
                // Import Firebase modules
                const { getFirestore, collection, getDocs, query, orderBy } = await import('https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js');
                const db = getFirestore();
                
                // Get all users
                const usersQuery = query(collection(db, 'users'), orderBy('createdAt', 'desc'));
                const querySnapshot = await getDocs(usersQuery);
                
                let users = [];
                querySnapshot.forEach(doc => {
                    users.push({ id: doc.id, ...doc.data() });
                });
                
                // Apply filters
                if (searchText) {
                    users = users.filter(user => {
                        const name = (user.name || user.displayName || '').toLowerCase();
                        const email = (user.email || '').toLowerCase();
                        const id = (user.id || '').toLowerCase();
                        const phone = (user.phone || '').toLowerCase();
                        
                        return name.includes(searchText) || 
                               email.includes(searchText) || 
                               id.includes(searchText) ||
                               phone.includes(searchText);
                    });
                }
                
                if (membershipLevel) {
                    users = users.filter(user => (user.membershipLevel || 'standard') === membershipLevel);
                }
                
                if (role) {
                    users = users.filter(user => {
                        // Check both is_admin and role fields
                        const userRole = (user.is_admin === true || user.role === 'admin') ? 'admin' : 'user';
                        return userRole === role;
                    });
                }
                
                // Update UI
                if (users.length === 0) {
                    noUsers.style.display = 'block';
                    usersCount.textContent = '0';
                } else {
                    usersCount.textContent = users.length;
                    renderUsers(users);
                }
            } catch (error) {
                console.error('Error filtering users:', error);
                showError('Kh√¥ng th·ªÉ l·ªçc ng∆∞·ªùi d√πng: ' + error.message);
            } finally {
