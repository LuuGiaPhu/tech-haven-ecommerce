        // Function ƒë·ªÉ ƒë√≥ng user profile panel
        function closeUserProfile() {
            console.log('‚ùå Closing user profile panel');
            const userProfilePanel = document.getElementById('userProfilePanel');
            if (userProfilePanel) {
                userProfilePanel.classList.remove('active');
                console.log('‚úÖ User profile panel closed');
            }
        }
        
        // Function ƒë·ªÉ c·∫≠p nh·∫≠t th√¥ng tin trong user profile panel
        function updateUserProfilePanel() {
            if (!window.currentUser) return;

            const userAvatar = document.querySelector('.user-avatar img');
            const userNameElement = document.querySelector('.user-info h3');
            const userEmailElement = document.querySelector('.user-info p');

            if (userAvatar && window.currentUser.photo) {
                userAvatar.src = window.currentUser.photo;
                userAvatar.alt = window.currentUser.name;
            }

            if (userNameElement) {
                userNameElement.textContent = window.currentUser.name;
            }

            if (userEmailElement) {
                userEmailElement.textContent = window.currentUser.email;
            }

            // C·∫≠p nh·∫≠t ng√†y tham gia
            const joinDateElement = document.getElementById('joinDate');
            if (joinDateElement) {
                const today = new Date();
                joinDateElement.textContent = today.toLocaleDateString('vi-VN', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                });
            }
        }
        
