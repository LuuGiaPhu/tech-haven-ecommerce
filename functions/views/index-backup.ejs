        function editUserProfile() {
            console.log('‚úèÔ∏è Edit user profile clicked');
            alert('Ch·ª©c nƒÉng ch·ªânh s·ª≠a h·ªì s∆° ƒëang ƒë∆∞·ª£c ph√°t tri·ªÉn!');
