<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lý Mã Giảm Giá - TECH HAVEN</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #fdf2f8 0%, #f3e8ff 50%, #dbeafe 100%);
            min-height: 100vh;
        }

        /* Header */
        .header {
            background: linear-gradient(135deg, #ec4899, #8b5cf6, #3b82f6);
            color: white;
            padding: 1rem 0;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .navbar {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 2rem;
        }

        .nav-brand h1 {
            font-weight: 800;
            font-size: 1.8rem;
        }

        .nav-brand a {
            text-decoration: none;
            color: inherit;
        }

        .nav-links {
            display: flex;
            gap: 2rem;
            align-items: center;
        }

        .nav-links a {
            color: white;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            padding: 0.5rem 1rem;
            border-radius: 8px;
        }

        .nav-links a:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }

        /* Main Container */
        .main-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 2rem;
        }

        .page-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 800;
            background: linear-gradient(135deg, #ec4899, #8b5cf6, #3b82f6);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.5rem;
        }

        .page-subtitle {
            color: #6b7280;
            font-size: 1.1rem;
        }

        /* Card Styles */
        .card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin-bottom: 2rem;
        }

        .card-header {
            background: linear-gradient(135deg, #fce7f3, #e7e5ff, #dbeafe);
            padding: 2rem;
            border-bottom: 1px solid #f3f4f6;
        }

        .card-header h3 {
            color: #1f2937;
            font-size: 1.5rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .card-body {
            padding: 2rem;
        }

        /* Form Styles */
        .coupon-form {
            display: grid;
            gap: 2rem;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
        }

        .form-group {
            position: relative;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: #374151;
        }

        .form-control {
            width: 100%;
            padding: 1rem;
            border: 2px solid #e5e7eb;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: #fafafa;
        }

        .form-control:focus {
            outline: none;
            border-color: #8b5cf6;
            box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
            background: white;
        }

        .form-control:invalid {
            border-color: #ef4444;
        }

        /* Button Styles */
        .btn {
            padding: 1rem 2rem;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
        }

        .btn-primary {
            background: linear-gradient(135deg, #8b5cf6, #3b82f6);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(139, 92, 246, 0.3);
        }

        .btn-secondary {
            background: linear-gradient(135deg, #ec4899, #f97316);
            color: white;
        }

        .btn-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(236, 72, 153, 0.3);
        }

        .btn-danger {
            background: linear-gradient(135deg, #ef4444, #dc2626);
            color: white;
        }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(239, 68, 68, 0.3);
        }

        /* Table Styles */
        .coupons-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
        }

        .coupons-table th,
        .coupons-table td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid #f3f4f6;
        }

        .coupons-table th {
            background: linear-gradient(135deg, #fce7f3, #e7e5ff, #dbeafe);
            font-weight: 600;
            color: #374151;
        }

        .coupons-table tbody tr:hover {
            background: #fafafa;
        }

        /* Code Display */
        .coupon-code {
            font-family: 'Courier New', monospace;
            background: linear-gradient(135deg, #fce7f3, #e7e5ff);
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 700;
            color: #7c3aed;
            border: 2px solid #c4b5fd;
        }

        /* Status Badges */
        .status-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 600;
        }

        .status-active {
            background: #dcfce7;
            color: #16a34a;
        }

        .status-used {
            background: #fef3c7;
            color: #d97706;
        }

        .status-expired {
            background: #fee2e2;
            color: #dc2626;
        }

        /* Actions */
        .table-actions {
            display: flex;
            gap: 0.5rem;
        }

        .btn-sm {
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
        }

        /* Code Generator */
        .code-generator {
            background: linear-gradient(135deg, #fce7f3, #e7e5ff);
            border: 2px dashed #c4b5fd;
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
            margin-bottom: 1rem;
        }

        .generated-code {
            font-family: 'Courier New', monospace;
            font-size: 2rem;
            font-weight: 700;
            color: #7c3aed;
            margin: 0.5rem 0;
            letter-spacing: 0.2em;
        }

        /* Loading Animation */
        @keyframes shimmer {
            0% { opacity: 0.6; }
            50% { opacity: 1; }
            100% { opacity: 0.6; }
        }

        .loading {
            animation: shimmer 1.5s ease-in-out infinite;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .form-row {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            .navbar {
                flex-direction: column;
                gap: 1rem;
                padding: 1rem;
            }

            .nav-links {
                flex-wrap: wrap;
                justify-content: center;
            }

            .page-title {
                font-size: 2rem;
            }

            .main-container {
                padding: 0 0.5rem;
            }

            .card-header,
            .card-body {
                padding: 1rem;
            }

            /* Horizontal scroll cho table trên mobile */
            .table-responsive {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
                border-radius: 8px;
                margin: 0 -1rem;
                padding: 0 1rem;
                position: relative;
            }

            /* Scroll indicator */
            .table-responsive::after {
                content: '';
                position: absolute;
                top: 0;
                right: 0;
                width: 20px;
                height: 100%;
                background: linear-gradient(to left, rgba(255,255,255,1), rgba(255,255,255,0));
                pointer-events: none;
                z-index: 2;
            }

            /* Expiration options styling */
            .form-check {
                margin-bottom: 10px;
            }
            
            .form-check-label {
                font-weight: 500;
                color: #198754;
            }
            
            #expirationDateContainer {
                transition: all 0.3s ease;
            }
            
            .badge.bg-success {
                font-size: 0.8em;
            }

            .coupons-table {
                font-size: 0.75rem;
                min-width: 700px; /* Đảm bảo bảng có độ rộng tối thiểu */
                white-space: nowrap;
            }

            .coupons-table th,
            .coupons-table td {
                padding: 0.5rem;
                min-width: 80px;
            }

            /* Ẩn cột ngày tạo trên tablet */
            .coupons-table th:nth-child(6),
            .coupons-table td:nth-child(6) {
                display: none;
            }

            /* Cột hành động sticky */
            .coupons-table th:last-child,
            .coupons-table td:last-child {
                position: sticky;
                right: 0;
                background: white;
                border-left: 1px solid #e5e7eb;
                box-shadow: -2px 0 4px rgba(0,0,0,0.1);
                min-width: 100px;
                z-index: 1;
            }

            .coupons-table th:last-child {
                background: #f8f9fa;
            }

            .table-actions {
                flex-direction: column;
                gap: 0.25rem;
            }

            .table-actions .btn {
                font-size: 0.75rem;
                padding: 0.25rem 0.5rem;
            }

            .mobile-scroll-hint {
                display: block !important;
                text-align: center;
                margin-bottom: 1rem;
                color: #6c757d;
                font-size: 0.8rem;
            }

            .generated-code {
                font-size: 1.5rem;
            }
        }

        @media (max-width: 480px) {
            .page-title {
                font-size: 1.75rem;
            }

            .card-header h3 {
                font-size: 1.25rem;
            }

            .container {
                padding: 0 0.25rem;
            }

            .card-body {
                padding: 0.75rem;
            }

            /* Tối ưu hóa table cho mobile nhỏ */
            .table-responsive {
                margin: 0 -0.75rem;
                padding: 0 0.75rem;
            }

            .coupons-table {
                font-size: 0.7rem;
                min-width: 600px;
            }

            .coupons-table th,
            .coupons-table td {
                padding: 0.375rem;
                min-width: 70px;
            }

            /* Ẩn thêm cột mô tả trên mobile nhỏ */
            .coupons-table th:nth-child(5),
            .coupons-table td:nth-child(5) {
                display: none;
            }

            .coupon-code {
                font-size: 0.65rem;
                padding: 0.25rem 0.5rem;
            }

            .status-badge {
                font-size: 0.6rem;
                padding: 0.15rem 0.4rem;
            }

            .table-actions .btn {
                font-size: 0.65rem;
                padding: 0.2rem 0.4rem;
            }

            /* Cột hành động vẫn sticky trên mobile nhỏ */
            .coupons-table th:last-child,
            .coupons-table td:last-child {
                min-width: 85px;
            }

            /* Ẩn thêm cột mô tả trên mobile nhỏ */
            .coupons-table th:nth-child(5),
            .coupons-table td:nth-child(5) {
                display: none;
            }

            .coupon-code {
                font-size: 0.65rem;
            }

            .status-badge {
                font-size: 0.6rem;
                padding: 0.15rem 0.4rem;
            }

            .generated-code {
                font-size: 1.25rem;
            }

            .table-actions .btn {
                font-size: 0.65rem;
                padding: 0.2rem 0.4rem;
            }
        }

        /* Notification Styles */
        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 1rem 1.5rem;
            border-radius: 12px;
            color: white;
            font-weight: 600;
            z-index: 1000;
            transform: translateX(100%);
            transition: transform 0.3s ease;
        }

        .notification.show {
            transform: translateX(0);
        }

        .notification.success {
            background: linear-gradient(135deg, #10b981, #059669);
        }

        .notification.error {
            background: linear-gradient(135deg, #ef4444, #dc2626);
        }

        .notification.warning {
            background: linear-gradient(135deg, #f59e0b, #d97706);
        }

        /* Expiration options styling */
        .expiration-group {
            width: 100% !important;
        }
        
        .expiration-options {
            display: flex;
            gap: 20px;
            margin-bottom: 15px;
        }
        
        .form-check {
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .form-check-label {
            font-weight: 500;
            cursor: pointer;
            margin: 0;
        }
        
        .form-check-label i {
            color: #6b7280;
            margin-right: 5px;
        }
        
        #expirationDateContainer {
            transition: all 0.3s ease;
            padding: 15px;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            background-color: #f9fafb;
        }
        
        #expirationDateContainer label {
            font-weight: 500;
            color: #374151;
            margin-bottom: 8px;
        }
        
        .badge.bg-success {
            font-size: 0.8em;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <nav class="navbar">
            <div class="nav-brand">
                <h1><a href="/">TECH HAVEN</a></h1>
            </div>
            <div class="nav-links">
                <a href="#" onclick="navigateToAdmin('input'); return false;"><i class="fas fa-plus"></i> Input</a>
                <a href="#" onclick="navigateToAdmin('edit'); return false;"><i class="fas fa-edit"></i> Edit</a>
                <a href="/admin/coupon" class="active"><i class="fas fa-ticket-alt"></i> Coupon</a>
                <a href="/"><i class="fas fa-home"></i> Trang Chủ</a>
            </div>
        </nav>
    </header>

    <!-- Main Container -->
    <div class="main-container">
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="page-title"><i class="fas fa-ticket-alt"></i> Quản Lý Mã Giảm Giá</h1>
            <p class="page-subtitle">Tạo và quản lý các mã giảm giá cho khách hàng</p>
        </div>

        <!-- Create Coupon Card -->
        <div class="card">
            <div class="card-header">
                <h3><i class="fas fa-plus-circle"></i> Tạo Mã Giảm Giá Mới</h3>
            </div>
            <div class="card-body">
                <!-- Code Generator -->
                <div class="code-generator">
                    <p><i class="fas fa-magic"></i> Mã giảm giá được tạo tự động</p>
                    <div class="generated-code" id="generatedCode">XXXXX</div>
                    <button type="button" class="btn btn-secondary" onclick="generateCouponCode()">
                        <i class="fas fa-refresh"></i> Tạo Mã Mới
                    </button>
                </div>

                <form class="coupon-form" id="couponForm" onsubmit="return createCoupon(event)">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="couponCode">Mã Giảm Giá</label>
                            <input type="text" id="couponCode" name="code" class="form-control" 
                                   readonly placeholder="Mã sẽ được tạo tự động"
                                   pattern="[A-Z0-9]{5}" title="Mã gồm 5 ký tự chữ và số">
                        </div>
                        <div class="form-group">
                            <label for="discountAmount">Số Tiền Giảm (VNĐ)</label>
                            <input type="number" id="discountAmount" name="discountAmount" class="form-control" 
                                   min="1000" max="10000000" step="1000" required
                                   placeholder="VD: 50000">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="usageLimit">Giới Hạn Sử Dụng</label>
                            <input type="number" id="usageLimit" name="usageLimit" class="form-control" 
                                   min="1" max="10" required value="10"
                                   placeholder="Tối đa 10 lần">
                        </div>
                        <div class="form-group">
                            <label for="description">Mô Tả</label>
                            <input type="text" id="description" name="description" class="form-control" 
                                   placeholder="VD: Giảm 50k cho đơn hàng từ 500k">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group expiration-group">
                            <label for="expirationOptions">Thời Hạn Sử Dụng</label>
                            <div class="expiration-options">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="expirationType" id="noExpiration" value="never" checked onchange="toggleExpirationDate()">
                                    <label class="form-check-label" for="noExpiration">
                                        <i class="fas fa-infinity"></i> Không thời hạn (Vĩnh viễn)
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="expirationType" id="hasExpiration" value="datetime" onchange="toggleExpirationDate()">
                                    <label class="form-check-label" for="hasExpiration">
                                        <i class="fas fa-calendar-times"></i> Có thời hạn kết thúc
                                    </label>
                                </div>
                            </div>
                            <div id="expirationDateContainer" style="display: none; margin-top: 15px;">
                                <label for="expiredDate">Ngày giờ kết thúc</label>
                                <input type="datetime-local" class="form-control" id="expiredDate" name="expiredDate">
                                <small class="text-muted">
                                    <i class="fas fa-info-circle"></i> Chọn ngày và giờ cụ thể khi mã giảm giá sẽ hết hạn
                                </small>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Tạo Mã Giảm Giá
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Existing Coupons Card -->
        <div class="card">
            <div class="card-header">
                <h3><i class="fas fa-list"></i> Danh Sách Mã Giảm Giá</h3>
            </div>
            <div class="card-body">
                <div class="mobile-scroll-hint" style="display: none;">
                    <small class="text-muted">
                        <i class="fas fa-hand-pointer"></i> 
                        Vuốt sang trái/phải để xem thêm cột
                    </small>
                </div>
                <div class="table-responsive">
                    <table class="coupons-table">
                        <thead>
                            <tr>
                                <th>Mã</th>
                                <th>Giảm Giá</th>
                                <th>Sử Dụng</th>
                                <th>Trạng Thái</th>
                                <th>Mô Tả</th>
                                <th>Thời Hạn</th>
                                <th>Ngày Tạo</th>
                                <th>Hành Động</th>
                            </tr>
                        </thead>
                        <tbody id="couponsTableBody">
                            <tr>
                                <td colspan="8" class="text-center">
                                    <i class="fas fa-spinner fa-spin"></i> Đang tải dữ liệu...
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Current coupons data
        let coupons = [];

        // Generate random coupon code
        function generateCouponCode() {
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
            let code = '';
            for (let i = 0; i < 5; i++) {
                code += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            
            // Update display and form
            document.getElementById('generatedCode').textContent = code;
            document.getElementById('couponCode').value = code;
            
            return code;
        }

        // Toggle expiration date input
        function toggleExpirationDate() {
            const hasExpiration = document.getElementById('hasExpiration').checked;
            const container = document.getElementById('expirationDateContainer');
            const expiredDateInput = document.getElementById('expiredDate');
            
            if (hasExpiration) {
                container.style.display = 'block';
                expiredDateInput.required = true;
            } else {
                container.style.display = 'none';
                expiredDateInput.required = false;
                expiredDateInput.value = '';
            }
        }

        // Create coupon
        async function createCoupon(event) {
            event.preventDefault();
            
            const formData = new FormData(event.target);
            const expirationType = document.querySelector('input[name="expirationType"]:checked').value;
            const expiredDateInput = document.getElementById('expiredDate').value;
            
            // Validation
            if (expirationType === 'datetime' && !expiredDateInput) {
                alert('Vui lòng chọn ngày giờ kết thúc!');
                return;
            }
            
            let expiredDate = null;
            if (expirationType === 'datetime' && expiredDateInput) {
                const selectedDate = new Date(expiredDateInput);
                const now = new Date();
                
                if (selectedDate <= now) {
                    alert('Ngày kết thúc phải sau thời điểm hiện tại!');
                    return;
                }
                
                expiredDate = selectedDate.toISOString();
            }
            
            const couponData = {
                code: formData.get('code'),
                discountAmount: parseInt(formData.get('discountAmount')),
                usageLimit: parseInt(formData.get('usageLimit')),
                description: formData.get('description') || '',
                expiredDate: expiredDate,
                usedCount: 0,
                status: 'active',
                createdAt: new Date().toISOString()
            };

            // Debug log
            console.log('Coupon data being sent:', couponData);
            console.log('Expiration type:', expirationType);
            console.log('Expired date input:', expiredDateInput);
            console.log('Final expired date:', expiredDate);

            try {
                // Get auth token
                const idToken = getStoredToken();
                
                const headers = {
                    'Content-Type': 'application/json'
                };
                
                if (idToken) {
                    headers['Authorization'] = `Bearer ${idToken}`;
                } else {
                    throw new Error('Không tìm thấy token đăng nhập. Vui lòng đăng nhập lại.');
                }
                
                const response = await fetch('/api/coupons', {
                    method: 'POST',
                    headers: headers,
                    body: JSON.stringify(couponData)
                });

                if (response.ok) {
                    const result = await response.json();
                    if (result.success) {
                        showNotification('Tạo mã giảm giá thành công!', 'success');
                        resetForm();
                        loadCoupons();
                    } else {
                        throw new Error(result.error || 'Không thể tạo mã giảm giá');
                    }
                } else if (response.status === 401) {
                    throw new Error('Không có quyền truy cập. Vui lòng đăng nhập lại.');
                } else {
                    const errorText = await response.text();
                    throw new Error(`Lỗi server (${response.status}): ${errorText.substring(0, 100)}`);
                }
            } catch (error) {
                console.error('Error creating coupon:', error);
                showNotification('Lỗi: ' + error.message, 'error');
            }
        }

        // Load coupons
        async function loadCoupons() {
            try {
                // Get auth token from localStorage or cookie
                const idToken = getStoredToken();
                
                const headers = {
                    'Content-Type': 'application/json'
                };
                
                if (idToken) {
                    headers['Authorization'] = `Bearer ${idToken}`;
                } else {
                    throw new Error('Không tìm thấy token đăng nhập. Vui lòng đăng nhập lại.');
                }
                
                const response = await fetch('/api/coupons', {
                    method: 'GET',
                    headers: headers
                });
                
                if (response.ok) {
                    const data = await response.json();
                    if (data.success) {
                        coupons = data.coupons;
                        renderCouponsTable();
                    } else {
                        throw new Error(data.error || 'Không thể tải dữ liệu');
                    }
                } else if (response.status === 401) {
                    throw new Error('Không có quyền truy cập. Vui lòng đăng nhập lại.');
                } else {
                    const errorText = await response.text();
                    throw new Error(`Lỗi server (${response.status}): ${errorText.substring(0, 100)}`);
                }
            } catch (error) {
                console.error('Error loading coupons:', error);
                document.getElementById('couponsTableBody').innerHTML = 
                    '<tr><td colspan="8" class="text-center" style="color: #ef4444;"><i class="fas fa-exclamation-triangle"></i> Lỗi tải dữ liệu: ' + error.message + '</td></tr>';
            }
        }

        // Render coupons table
        function renderCouponsTable() {
            const tbody = document.getElementById('couponsTableBody');
            
            if (coupons.length === 0) {
                tbody.innerHTML = '<tr><td colspan="8" class="text-center" style="color: #6b7280;"><i class="fas fa-inbox"></i> Chưa có mã giảm giá nào</td></tr>';
                return;
            }

            tbody.innerHTML = coupons.map(coupon => {
                const status = getStatus(coupon);
                const statusClass = getStatusClass(status);
                
                return `
                    <tr>
                        <td><span class="coupon-code">${coupon.code}</span></td>
                        <td>${formatMoney(coupon.discountAmount)}</td>
                        <td>${coupon.usedCount}/${coupon.usageLimit}</td>
                        <td><span class="status-badge ${statusClass}">${getStatusText(status)}</span></td>
                        <td>${coupon.description || '-'}</td>
                        <td>${coupon.expiredDate ? formatDateTime(coupon.expiredDate) : '<span class="badge bg-success"><i class="fas fa-infinity"></i> Vĩnh viễn</span>'}</td>
                        <td>${formatDate(coupon.createdAt)}</td>
                        <td>
                            <div class="table-actions">
                                <button class="btn btn-sm btn-danger" onclick="deleteCoupon('${coupon.id}', '${coupon.code}')">
                                    <i class="fas fa-trash"></i> Xóa
                                </button>
                            </div>
                        </td>
                    </tr>
                `;
            }).join('');
        }

        // Delete coupon
        async function deleteCoupon(couponId, couponCode) {
            if (!confirm(`Bạn có chắc muốn xóa mã "${couponCode}"?`)) {
                return;
            }

            try {
                // Get auth token
                const idToken = getStoredToken();
                
                const headers = {};
                
                if (idToken) {
                    headers['Authorization'] = `Bearer ${idToken}`;
                } else {
                    throw new Error('Không tìm thấy token đăng nhập. Vui lòng đăng nhập lại.');
                }
                
                const response = await fetch(`/api/coupons/${couponId}`, {
                    method: 'DELETE',
                    headers: headers
                });

                if (response.ok) {
                    const result = await response.json();
                    if (result.success) {
                        showNotification('Đã xóa mã giảm giá!', 'success');
                        loadCoupons();
                    } else {
                        throw new Error(result.error || 'Không thể xóa mã');
                    }
                } else if (response.status === 401) {
                    throw new Error('Không có quyền truy cập. Vui lòng đăng nhập lại.');
                } else {
                    const errorText = await response.text();
                    throw new Error(`Lỗi server (${response.status}): ${errorText.substring(0, 100)}`);
                }
            } catch (error) {
                console.error('Error deleting coupon:', error);
                showNotification('Lỗi: ' + error.message, 'error');
            }
        }

        // Helper functions
        function getStatus(coupon) {
            const now = new Date();
            const expiredDate = coupon.expiredDate ? new Date(coupon.expiredDate) : null;
            
            // Check if expired by date
            if (expiredDate && now > expiredDate) {
                return 'expired';
            }
            
            // Check if used up
            if (coupon.usedCount >= coupon.usageLimit) {
                return 'used';
            }
            
            return coupon.status || 'active';
        }

        function getStatusClass(status) {
            switch(status) {
                case 'active': return 'status-active';
                case 'used': return 'status-used';
                case 'expired': return 'status-expired';
                default: return 'status-active';
            }
        }

        function getStatusText(status) {
            switch(status) {
                case 'active': return 'Hoạt Động';
                case 'used': return 'Hết Lượt';
                case 'expired': return 'Hết Hạn';
                default: return 'Hoạt Động';
            }
        }

        function formatMoney(amount) {
            return new Intl.NumberFormat('vi-VN', {
                style: 'currency',
                currency: 'VND'
            }).format(amount);
        }

        function formatDate(dateString) {
            return new Date(dateString).toLocaleDateString('vi-VN', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit'
            });
        }

        function formatDateTime(dateString) {
            return new Date(dateString).toLocaleString('vi-VN', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

        function resetForm() {
            document.getElementById('couponForm').reset();
            // Reset expiration options to default
            document.getElementById('noExpiration').checked = true;
            document.getElementById('hasExpiration').checked = false;
            document.getElementById('expirationDateContainer').style.display = 'none';
            document.getElementById('expiredDate').required = false;
            generateCouponCode();
        }

        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.innerHTML = `<i class="fas fa-${getNotificationIcon(type)}"></i> ${message}`;
            
            document.body.appendChild(notification);
            
            setTimeout(() => notification.classList.add('show'), 100);
            
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => document.body.removeChild(notification), 300);
            }, 3000);
        }

        function getNotificationIcon(type) {
            switch(type) {
                case 'success': return 'check-circle';
                case 'error': return 'exclamation-circle';
                case 'warning': return 'exclamation-triangle';
                default: return 'info-circle';
            }
        }

        // Helper function to get token from cookie
        function getTokenFromCookie() {
            const cookies = document.cookie.split(';');
            for (let cookie of cookies) {
                const [name, value] = cookie.trim().split('=');
                if (name === 'idToken') {
                    return decodeURIComponent(value);
                }
            }
            return null;
        }

        // Helper function to get token from URL parameters
        function getTokenFromURL() {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get('token');
        }

        // Helper function to save token to localStorage
        function saveTokenToStorage(token) {
            if (token) {
                localStorage.setItem('idToken', token);
            }
        }

        // Helper function to get token from URL parameter
        function getTokenFromURL() {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get('token');
        }

        // Helper function to get token from localStorage or cookies
        function getStoredToken() {
            // Try localStorage first
            let token = localStorage.getItem('idToken');
            if (token) return token;
            
            // Try cookies as fallback
            const cookies = document.cookie.split(';');
            for (let cookie of cookies) {
                const [name, value] = cookie.trim().split('=');
                if (name === 'idToken' && value) {
                    return value;
                }
            }
            return null;
        }

        // Helper function to save token to localStorage
        function saveTokenToStorage(token) {
            if (token) {
                localStorage.setItem('idToken', token);
                console.log('Token saved to localStorage');
            }
        }

        // Admin navigation function
        function navigateToAdmin(page) {
            const token = getStoredToken();
            if (!token) {
                showNotification('Vui lòng đăng nhập để truy cập trang admin', 'error');
                return;
            }
            
            console.log('Navigating to admin page:', page, 'with token');
            const targetUrl = `/admin/${page}?token=${encodeURIComponent(token)}`;
            window.location.href = targetUrl;
        }

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            // Check for token in URL first
            const urlToken = getTokenFromURL();
            if (urlToken) {
                console.log('Found token in URL, saving to localStorage');
                saveTokenToStorage(urlToken);
                // Remove token from URL for security
                const url = new URL(window.location);
                url.searchParams.delete('token');
                window.history.replaceState({}, document.title, url.pathname);
            }
            
            generateCouponCode();
            loadCoupons();
        });
    </script>
    
