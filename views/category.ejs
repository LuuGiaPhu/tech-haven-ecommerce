                    <p>Personalized configurations for your specific needs</p>
                    <button class="category-btn">VIEW PRODUCTS</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Back to Home -->
    <section class="back-section">
        <a href="/" class="back-btn">
            <i class="fas fa-arrow-left"></i>
            Back to Home
        </a>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
