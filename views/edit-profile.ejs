                feedback = 'Kh√°';
                color = '#28a745';
            } else {
                feedback = 'M·∫°nh';
                color = '#20c997';
            }
            
            strengthBar.style.width = strength + '%';
            strengthBar.style.background = color;
            strengthText.textContent = feedback;
            strengthText.style.color = color;
