    <style>
        /* Override loading screen CSS for shop page */
        body.shop-page.loading, 
        html.loading body.shop-page {
            overflow: auto !important;
            height: auto !important;
        }
        
        /* Prevent loading screen from hiding content on shop page */
        body.shop-page > .header,
        body.shop-page > .shop-header,
        body.shop-page > .shop-content,
        body.shop-page > .footer {
            display: block !important;
            visibility: visible !important;
        }
        
        /* Ensure header doesn't clip mobile menu */
        body.shop-page .header,
        body.shop-page .navbar {
            overflow: visible !important;
        }
        
        /* Keep modals and overlays properly hidden when not active */
        .search-overlay:not(.active),
        .cart-sidebar:not(.active),
        .cart-overlay:not(.active),
        .modal-overlay:not(.active) {
            display: none !important;
            visibility: hidden !important;
        }
        
        /* Fix specific inline elements that shouldn't be forced to block */
        body.shop-page span,
        body.shop-page i,
        body.shop-page a,
        body.shop-page button,
        body.shop-page input,
        body.shop-page select,
        body.shop-page textarea {
            display: initial !important;
        }
        
        /* Restore flex layouts (except nav-menu which has special mobile handling) */
        body.shop-page .navbar,
        body.shop-page .nav-icons,
        body.shop-page .shop-toolbar,
        body.shop-page .toolbar-left,
        body.shop-page .toolbar-right,
        body.shop-page .sort-options,
        body.shop-page .view-options,
        body.shop-page .product-price,
        body.shop-page .breadcrumb,
        body.shop-page .filter-header,
        body.shop-page .filter-option,
        body.shop-page .rating-filter,
        body.shop-page .cart-header,
        body.shop-page .cart-footer,
        body.shop-page .modal-header,
        body.shop-page .modal-footer,
        body.shop-page .form-row,
        body.shop-page .footer-content,
        body.shop-page .social-icons {
            display: flex !important;
        }
        
        /* Restore grid layouts */
        body.shop-page .shop-layout,
        body.shop-page .products-grid {
            display: grid !important;
        }
        
        /* Restore inline-flex elements */
        body.shop-page .cart-icon-wrapper,
        body.shop-page .mobile-menu-toggle {
            display: inline-flex !important;
        }
        
        /* Special handling for nav-menu mobile behavior */
        @media (min-width: 1025px) {
            body.shop-page .nav-menu {
                display: flex !important;
            }
        }
        
        @media (max-width: 1024px) {
            body.shop-page .nav-menu {
                display: none !important;
                position: fixed;
                top: 0;
                left: 0;
                width: 100vw;
                height: 100vh;
                background: rgba(17, 24, 39, 0.98);
                backdrop-filter: blur(10px);
                -webkit-backdrop-filter: blur(10px);
                flex-direction: column;
                align-items: center;
                justify-content: flex-start;
                padding: 5rem 2rem 2rem 2rem;
                gap: 1.5rem;
                transform: translateY(-100%);
                opacity: 0;
                visibility: hidden;
                transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
                z-index: 99999 !important;
                overflow-y: auto;
                box-sizing: border-box;
            }
            
            body.shop-page .nav-menu.active {
                display: flex !important;
                transform: translateY(0) !important;
                opacity: 1 !important;
                visibility: visible !important;
            }
            
            body.shop-page .nav-menu a {
                color: white !important;
                text-decoration: none;
                font-size: 1.2rem;
                font-weight: 500;
                padding: 1rem 2rem;
                border-radius: 8px;
                transition: all 0.3s ease;
                width: 200px;
                text-align: center;
                box-sizing: border-box;
                display: block !important;
            }
            
            body.shop-page .nav-menu a:hover,
            body.shop-page .nav-menu a.active {
                background: rgba(102, 126, 234, 0.2);
                color: #fbbf24 !important;
            }
            
            body.shop-page .mobile-nav-icons {
                display: flex !important;
                flex-direction: column;
                gap: 1rem;
                margin-top: 2rem;
                width: 100%;
                max-width: 300px;
            }
            
            body.shop-page .mobile-nav-icons a {
                display: flex !important;
                align-items: center;
                justify-content: center;
                gap: 0.5rem;
                font-size: 1rem;
                width: 100% !important;
                padding: 1rem !important;
                background: rgba(255, 255, 255, 0.1);
                border-radius: 8px;
            }
            
            /* Admin Dropdown Mobile Styles */
            body.shop-page .admin-dropdown {
                position: relative;
                display: block !important;
            }
            
            body.shop-page .admin-dropdown .dropdown-toggle {
                display: block !important;
                color: white !important;
                text-decoration: none;
                font-size: 1.2rem;
                font-weight: 500;
                padding: 1rem 2rem;
                border-radius: 8px;
                transition: all 0.3s ease;
                width: 200px;
                text-align: center;
                box-sizing: border-box;
            }
            
            body.shop-page .admin-dropdown .dropdown-toggle:hover {
                background: rgba(102, 126, 234, 0.2);
                color: #fbbf24 !important;
            }
            
            body.shop-page .admin-dropdown .dropdown-menu {
                position: static !important;
                background: rgba(255, 255, 255, 0.1) !important;
                box-shadow: none !important;
                margin-top: 0.5rem !important;
                border-radius: 8px !important;
                opacity: 1 !important;
                visibility: visible !important;
                transform: none !important;
                display: none !important;
                border: 1px solid rgba(255, 255, 255, 0.2) !important;
                z-index: 1000001 !important;
                flex-direction: column !important;
            }
            
            body.shop-page .admin-dropdown.active .dropdown-menu {
                display: flex !important;
                animation: fadeIn 0.3s ease;
            }
            
            @keyframes fadeIn {
                from { opacity: 0; transform: translateY(-10px); }
                to { opacity: 1; transform: translateY(0); }
            }
            
            body.shop-page .admin-dropdown .dropdown-menu a {
                display: block !important;
                color: white !important;
                padding: 0.75rem 1rem !important;
                font-size: 1rem !important;
                width: auto !important;
                text-align: center !important;
                background: transparent !important;
            }
            
            body.shop-page .admin-dropdown .dropdown-menu a:hover {
                background: rgba(255, 255, 255, 0.2) !important;
                color: #fbbf24 !important;
            }
            
            body.shop-page .mobile-menu-toggle {
                display: flex !important;
                cursor: pointer;
                background: rgba(255, 255, 255, 0.1);
                border: none;
                padding: 0.5rem;
                border-radius: 6px;
                transition: all 0.3s ease;
                min-width: 44px;
                min-height: 44px;
                justify-content: center;
                align-items: center;
                position: relative;
                z-index: 1000000 !important;
            }
            
            body.shop-page .mobile-menu-toggle:hover {
                background: rgba(255, 255, 255, 0.2);
            }
            
            body.shop-page .mobile-menu-toggle i {
                font-size: 1.3rem;
                color: white;
                transition: all 0.3s ease;
            }
        }
    </style>
